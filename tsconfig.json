{
  "compilerOptions": {
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": ["es6", "esnext", "es2015", "DOM"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./dist",
    "removeComments": true,
    "rootDir": "../../",
    "target": "es6",
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "*": ["src/*"],
      "graphql": ["node_modules/graphql"],
      "base-graphql": ["node_modules/base-graphql"]
    }
  },
  "exclude": ["node_modules", "./test/**/*.test.ts"],
  "include": ["./**/*.ts", "./**/*.json"],
  "files": ["../../generated-types/type-defs.ts"],
}
